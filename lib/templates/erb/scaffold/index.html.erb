<%% page_title("<%= plural_table_name %>") -%>


<div class="b-command-menu">
  <%%= link_to 'Новый <%= human_name %>', new_<%= singular_table_name %>_path %>
</div>

<div id="<%= plural_table_name %>" class="table_data">

<table>
  <tr>
    <th></th>
<% attributes.each do |attribute| -%>
    <th><%= attribute.human_name %></th>
<% end -%>
    <th></th>
  </tr>

<%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
  <tr>
    <td><%%= link_to image_tag('edit.png'), edit_<%= singular_table_name %>_path(<%= singular_table_name %>) %></td>
<% attributes.each do |attribute| -%>
    <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
    <td><%%= link_to image_tag('bin.png'), <%= singular_table_name %>, <%= key_value :confirm, "'Удалить, вы уверены?'" %>, <%= key_value :method, ":delete" %> %></td>
  </tr>
<%% end %>
</table>

</div>

<%%= will_paginate @<%= plural_table_name %> %>
